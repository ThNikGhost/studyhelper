# ===========================================
# StudyHelper - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
POSTGRES_USER=studyhelper
POSTGRES_PASSWORD=studyhelper
POSTGRES_DB=studyhelper
DATABASE_URL=postgresql+asyncpg://studyhelper:studyhelper@localhost:5432/studyhelper

# -------------------------------------------
# Redis (for Celery)
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# Application
# -------------------------------------------
DEBUG=true
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# -------------------------------------------
# Schedule Parser
# -------------------------------------------
SCHEDULE_URL=https://eservice.omsu.ru/schedule/#/schedule/group/5028
SCHEDULE_UPDATE_INTERVAL_HOURS=6

# -------------------------------------------
# Push Notifications (Phase 2)
# -------------------------------------------
# Generate VAPID keys: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_CLAIMS_EMAIL=admin@example.com

# -------------------------------------------
# File Storage (Phase 2)
# -------------------------------------------
# UPLOAD_DIR=./uploads
# MAX_FILE_SIZE_MB=50
